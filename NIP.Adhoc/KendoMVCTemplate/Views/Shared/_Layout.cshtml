    <!-- Bootstrap core CSS -->
    <!-- Material Design Bootstrap -->
    <link href="@Url.Content("~/css/mdb.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/material-bootstrap-wizard.css")" rel="stylesheet" />


    <!-- App favicon -->
    @*<link rel="shortcut icon" href="assets/images/favicon.ico">*@
    <!-- App css -->
    @*<link href="~/Content/kendo/bootstrap.min.css" rel="stylesheet" />*@
    <link href="@Url.Content("~/Content/icons.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/metismenu.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" />
    @*<script src="assets/js/modernizr.min.js"></script>*@
    @*<link href="@Url.Content("~/css/adminlte.css")" rel="stylesheet">*@
    @*<link href="@Url.Content("~/css/bootstrap.css")" rel="stylesheet">*@



    @*@Scripts.Render("~/bundles/modernizr")*@
